<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_dialog_base"
        android:paddingBottom="40dp">

        <View
            android:id="@+id/viewSlider"
            android:layout_width="32dp"
            android:layout_height="4dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/bg_dialog_bottom_login_slider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_need_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp"
            android:text="@string/needLogin"
            android:textAlignment="center"
            android:textColor="@color/loginMainTextColor"
            android:textSize="16sp"
            android:fontFamily="@font/spoqahansansneo_bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewSlider" />

        <ImageButton
            android:id="@+id/btn_login_kakao"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="64dp"
            android:background="@drawable/bg_login_kakao"
            app:layout_constraintBottom_toBottomOf="@id/btn_login_naver"
            app:layout_constraintEnd_toStartOf="@id/btn_login_naver"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/btn_login_naver" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/loginKakao"
            android:textColor="@color/loginMainTextColor"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="@id/btn_login_kakao"
            app:layout_constraintStart_toStartOf="@id/btn_login_kakao"
            app:layout_constraintTop_toBottomOf="@id/btn_login_kakao" />

        <ImageButton
            android:id="@+id/btn_login_naver"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_login_naver"
            android:gravity="center"
            app:layout_constraintEnd_toStartOf="@id/btn_login_facebook"
            app:layout_constraintStart_toEndOf="@id/btn_login_kakao"
            app:layout_constraintTop_toBottomOf="@id/tv_need_login" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/loginNaver"
            android:textColor="@color/loginMainTextColor"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="@id/btn_login_naver"
            app:layout_constraintStart_toStartOf="@id/btn_login_naver"
            app:layout_constraintTop_toBottomOf="@id/btn_login_naver" />

        <ImageButton
            android:id="@+id/btn_login_facebook"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/bg_login_facebook"
            android:layout_marginEnd="64dp"
            app:layout_constraintBottom_toBottomOf="@id/btn_login_naver"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_login_naver"
            app:layout_constraintTop_toTopOf="@id/btn_login_naver" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/loginFacebook"
            android:textColor="@color/loginMainTextColor"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="@id/btn_login_facebook"
            app:layout_constraintStart_toStartOf="@id/btn_login_facebook"
            app:layout_constraintTop_toBottomOf="@id/btn_login_facebook" />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/facebookLoginButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>